#
# Enable direct and reflected timing parameterization on top of a photon library.
# Works only for DUNE SP.
#
dunesp_library_vuv_vis_prop_timing_photonvisibilityservice:
{
   # This will need to be repalced in dunetpc with
   # dunesp-specific library settings
   @table::standard_library_vuv_prop_timing_photonvisibilityservice

   # Flag to enable visible light simulation
   StoreReflected: true
   
   # DUNE-specific VIS parameterization
   @table::dunesp_vis_timing_parameterization

}

#
# Enable direct timing parameterization and Nhits model estimation.
# Works only for DUNE SP.
#
# default case is 90cm Rayleigh scattering length
dunesp_Nhits_vuv_prop_timing_RS90cm_photonvisibilityservice:
{
   # Flags to enable parameterizations, disable library
   IncludePropTime: true
   UseNhitsModel: true
   DoNotLoadLibrary: true

   # Generic VUV timing parameterization
   @table::common_vuv_timing_parameterization

   # Semi-analytic VUV Nhits parameters
   GH_PARS: @local::GH_RS90cm_SP
   BORDER_correction_SP: @local::BORDER_correction_RS90cm_SP
}
# alternate case - original 60cm Rayleigh scattering length
dunesp_Nhits_vuv_prop_timing_RS60cm_photonvisibilityservice:
{
   # Flags to enable parameterizations, disable library
   IncludePropTime: true
   UseNhitsModel: true
   DoNotLoadLibrary: true

   # Generic VUV timing parameterization
   @table::common_vuv_timing_parameterization

   # Semi-analytic VUV Nhits parameters
   GH_PARS: @local::GH_RS60cm_SP
   BORDER_correction_SP: @local::BORDER_correction_RS60cm_SP
}
# xenon doped argon case
dunesp_Nhits_vuv_Xe_photonvisibilityservice:
{
   # Flags to enable parameterizations, disable library
   IncludePropTime: false	# timing parameterisation does not exist for Xe doped case
   UseNhitsModel: true
   DoNotLoadLibrary: true

   # Generic VUV timing parameterization
   @table::common_vuv_timing_parameterization

   # Semi-analytic VUV Nhits parameters
   GH_PARS: @local::GH_RS700cm_SP
   BORDER_correction_SP: @local::BORDER_correction_RS700cm_SP
}

#
# Enable direct and reflected timing parameterization and Nhits model estimation.
# Works only for DUNE SP.
#
# default case is 90cm Rayleigh scattering length for the VUV light
dunesp_Nhits_vuv_vis_prop_timing_RS90cm_photonvisibilityservice:
{
   # DUNE-SP VUV timing and Nhits settings
   @table::dunesp_Nhits_vuv_prop_timing_RS90cm_photonvisibilityservice

   # Flag to enable visible light simulation
   StoreReflected: true
 
   # DUNE-SP VIS parameterization
   @table::dunesp_vis_timing_parameterization

   # DUNE-SP semi-analytic VIS Nhits parameters
   VIS_PARS: @local::VIS_RS90cm_SP

   # VIS border correction
   ApplyVISBorderCorrection: true
   VIS_BORDER_correction_type: @local::VIS_RS90cm_SP_BORDER_correction_type
   VIS_BORDER_distances_x: @local::VIS_RS90cm_SP_BORDER_distances_x
   VIS_BORDER_distances_r: @local::VIS_RS90cm_SP_BORDER_distances_r
   VIS_BORDER_correction: @local::VIS_RS90cm_SP_BORDER_correction
}
# alternate case - original 60cm Rayleigh scattering length for VUV light
dunesp_Nhits_vuv_vis_prop_timing_RS60cm_photonvisibilityservice:
{
   # DUNE-SP VUV timing and Nhits settings
   @table::dunesp_Nhits_vuv_prop_timing_RS60cm_photonvisibilityservice

   # Flag to enable visible light simulation
   StoreReflected: true
 
   # DUNE-SP VIS parameterization
   @table::dunesp_vis_timing_parameterization

   # DUNE-SP semi-analytic VIS Nhits parameters
   VIS_PARS: @local::VIS_RS60cm_SP

   # VIS border correction
   ApplyVISBorderCorrection: true
   VIS_BORDER_correction_type: @local::VIS_RS60cm_SP_BORDER_correction_type
   VIS_BORDER_distances_x: @local::VIS_RS60cm_SP_BORDER_distances_x
   VIS_BORDER_distances_r: @local::VIS_RS60cm_SP_BORDER_distances_r
   VIS_BORDER_correction: @local::VIS_RS60cm_SP_BORDER_correction
}
# xenon doped argon case
dunesp_Nhits_vuv_vis_Xe_photonvisibilityservice:
{
   # DUNE-SP VUV timing and Nhits settings - note: timing is disabled, parameterisation does not exist for Xe doped case
   @table::dunesp_Nhits_vuv_Xe_photonvisibilityservice

   # Flag to enable visible light simulation
   StoreReflected: true
 
   # DUNE-SP VIS parameterization
   @table::dunesp_vis_timing_parameterization

   # DUNE-SP semi-analytic VIS Nhits parameters
   VIS_PARS: @local::VIS_RS700cm_SP

   # VIS border correction
   ApplyVISBorderCorrection: true
   VIS_BORDER_correction_type: @local::VIS_RS700cm_SP_BORDER_correction_type
   VIS_BORDER_distances_x: @local::VIS_RS700cm_SP_BORDER_distances_x
   VIS_BORDER_distances_r: @local::VIS_RS700cm_SP_BORDER_distances_r
   VIS_BORDER_correction: @local::VIS_RS700cm_SP_BORDER_correction
}

